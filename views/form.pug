- let action = "/new";
- let value = "";

if (todo)
    - action = "/" + todo.id + "?_method=PUT";
    - value = todo.title;

form(class="navbar-form navbar-left" action=action, method="POST")
    .form-group
        input(type="text" name="title" class="form-control" placeholder="Title" value=value)
    button(type="submit" class="btn btn-default") Submit